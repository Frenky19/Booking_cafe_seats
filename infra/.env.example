NOTIFY_MAIL_FROM=example@example.ru
NOTIFY_MAIL_PASSWORD=hackme
NOTIFY_MAIL_SERVER=smtp.yandex.ru
NOTIFY_MAIL_PORT=587
NOTIFY_MAIL_SSL_TLS=False
NOTIFY_MAIL_STARTTLS=True

# Redis настройки
